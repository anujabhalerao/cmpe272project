<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
   android:background="#006699"
    android:layout_height="match_parent" android:paddingLeft="16dp"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="20dp"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:id ="@+id/lbl_welcome"
        android:text="Welcome " android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView android:text="Guest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lbl_guest"
        android:layout_toEndOf="@+id/lbl_welcome"/>

    <TextView
        android:layout_width="wrap_content"
        android:textSize="90sp"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large"
        android:layout_centerVertical="true"
        android:id="@+id/pollenCount"
        android:layout_below="@+id/lbl_welcome"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="200dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium"
        android:id="@+id/pollenType"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="40dp"
        android:text="Medium"
        android:id="@+id/date"
        android:layout_below="@+id/pollenType"
        android:layout_alignParentStart="true"/>

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_above="@+id/date"
        android:layout_alignParentStart="true"
         />

</RelativeLayout>
